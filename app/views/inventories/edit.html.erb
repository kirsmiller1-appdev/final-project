<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit inventory
    </h2>

    <form action="/modify_inventory/<%= @inventory.id %>"  method="post" >
      <div class="form-group">
        <label for="location_box">
          Location
        </label>

        <select id="location_box" name="location_from_query" class="form-control">
          <option value="Chicago">Chicago</option>
          <option value="SF">SF</option>
        </select>
      </div>

      

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control" value="<%= @inventory.price %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update inventory
      </button>
    </form>
  </div>
</div>

<hr>
