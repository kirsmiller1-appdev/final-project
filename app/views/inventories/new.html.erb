<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new wine to collection
    </h2>

    <form action="/insert_inventory" method="post">
            <div class="form-group">
        <label for="vintage_box">
          Vintage
        </label>

        <input type="text" id="vintage_box" name="vintage_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="vineyard_box">
          Vineyard
        </label>

        <input type="text" id="vineyard_box" name="vineyard_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="blend_box">
          Blend
        </label>

        <input type="text" id="blend_box" name="blend_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control">
      </div>

            <div class="form-group">
        <label for="expert_rating_box">
          Expert rating
        </label>

        <input type="text" id="expert_rating_box" name="expert_rating_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="expert_notes_box">
          Expert notes
        </label>

        <textarea id="expert_notes_box" name="expert_notes_from_query" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
        <label for="photo_url_box">
          Photo url
        </label>

        <input type="text" id="photo_url_box" name="photo_url_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="external_url_box">
          External url
        </label>

        <input type="text" id="external_url_box" name="external_url_from_query" class="form-control">
      </div>



      <button class="btn btn-block btn-outline-secondary">
        Create inventory
      </button>
    </form>
  </div>
</div>