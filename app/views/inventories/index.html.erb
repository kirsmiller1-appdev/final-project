<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Wines in inventory
    </h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          Wine
        </th>

        <th>
          Location
        </th>

        <th>
          Price
        </th>

        <th>
          In inventory?
        </th>

        <th>
          Tags
        </th>
      </tr>

      <% @inventories.each do |inventory| %>
      <tr>

        <td>
          <a href="/inventories/<%= inventory.id %>">
            <%= inventory.vintage %> <%= inventory.vineyard %> <%= inventory.blend %>
          </a>
        </td>

        <td>
          <%= inventory.location %>
        </td>

        <td>
          <%= inventory.price %>
        </td>

        <td>
          <% if inventory.alive == true %>
            <i class="fas fa-check"></i>
          <% else %>
            <i class="fas fa-minus-circle"></i>
          <% end %>
        </td>

        <td>
          <%= inventory.tags.to_sentence %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new wine to collection
    </h2>

    <form action="/insert_inventory" method="post">
            <div class="form-group">
        <label for="vintage_box">
          Vintage
        </label>

        <input type="text" id="vintage_box" name="vintage_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="vineyard_box">
          Vineyard
        </label>

        <input type="text" id="vineyard_box" name="vineyard_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="blend_box">
          Blend
        </label>

        <input type="text" id="blend_box" name="blend_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create inventory
      </button>
    </form>
  </div>
</div>

