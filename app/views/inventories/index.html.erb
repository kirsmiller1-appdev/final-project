<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Wines in inventory
      MAKE SURE TO UPDATE TO ONLY ACTIVE!
    </h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
        </th>

        <th>
          Wine
        </th>

        <th>
          Location
        </th>

        <th>
          Price
        </th>

        <th>
          In inventory?
        </th>

        <th>
          Tags
        </th>

        <th>
          Rating
        </th>

      </tr>

      <% @inventories.each do |inventory| %>
      <tr>
        <td>
          <img src="<%= inventory.photo_url %>" width="50">
        </td>

        <td>
          <a href="/inventories/<%= inventory.id %>">
            <%= inventory.vintage %> <%= inventory.vineyard %> <%= inventory.blend %>
          </a>
        </td>

        <td>
          <%= inventory.location %>
        </td>

        <td>
          <%= number_to_currency(inventory.price) %>
        </td>

        <td>
          <% if inventory.alive == true %>
            <i style="color:green;" class="fas fa-check"></i>
          <% else %>
            <i style="color:#ed8780;" class="fas fa-minus-circle"></i>
          <% end %>
        </td>

        <td>
          <% inventory.tags_array.each do |tag| %>
            <p style="background-color:#5bc0de; display:inline; padding:.2em .6em .3em;font-size:75%;font-weight:700; line-height:1; text-align:center; white-space:nowrap; vertical-align:baseline; border-radius:.25em;">
            <a href="/wines/tag/<%= tag.tag %>" style="color:#fff;">
              <%= tag.tag %>
            </a>
            </p>
            <br>
          <% end %>
        </td>

        <td>
          <%= inventory.avg_rating %>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new wine to collection
    </h2>

    <form action="/insert_inventory" method="post">
            <div class="form-group">
        <label for="vintage_box">
          Vintage
        </label>

        <input type="text" id="vintage_box" name="vintage_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="vineyard_box">
          Vineyard
        </label>

        <input type="text" id="vineyard_box" name="vineyard_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="blend_box">
          Blend
        </label>

        <input type="text" id="blend_box" name="blend_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create inventory
      </button>
    </form>
  </div>
</div>

