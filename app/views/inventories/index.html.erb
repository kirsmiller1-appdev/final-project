<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all inventories
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new inventory
    </h2>

    <form action="/insert_inventory" method="post">
      <div class="form-group">
        <label for="wine_id_box">
          Wine
        </label>

        <input type="text" id="wine_id_box" name="wine_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="owner_id_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="location_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control">
      </div>

      <div class="form-group">
        <label for="end_date_box">
          End date
        </label>

        <input type="date" id="end_date_box" name="end_date_from_query" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create inventory
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Wine
        </th>

        <th>
          Owner
        </th>

        <th>
          Location
        </th>

        <th>
          Price
        </th>

        <th>
          End date
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @inventories.each do |inventory| %>
      <tr>
        <td>
          <%= inventory.id %>
        </td>

        <td>
          <%= inventory.wine_id %>
        </td>

        <td>
          <%= inventory.owner_id %>
        </td>

        <td>
          <%= inventory.location %>
        </td>

        <td>
          <%= inventory.price %>
        </td>

        <td>
          <%= inventory.end_date %>
        </td>

        <td>
          <%= time_ago_in_words(inventory.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(inventory.updated_at) %> ago
        </td>

        <td>
          <a href="/inventories/<%= inventory.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
