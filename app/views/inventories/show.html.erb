<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Inventory #<%= @inventory.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/inventories" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_inventory/<%= @inventory.id %>" class="btn btn-block btn-outline-secondary">
          Delete inventory
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Wine
      </dt>
      <dd>
        <%= @inventory.wine_id %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @inventory.owner_id %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @inventory.location %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @inventory.price %>
      </dd>

      <dt>
        End date
      </dt>
      <dd>
        <%= @inventory.end_date %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@inventory.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@inventory.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit inventory
    </h2>

    <form action="/modify_inventory/<%= @inventory.id %>"  method="post" >
      <div class="form-group">
        <label for="wine_id_box">
          Wine
        </label>

        <input type="text" id="wine_id_box" name="wine_id_from_query" class="form-control" value="<%= @inventory.wine_id %>">
      </div>

      <div class="form-group">
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="owner_id_from_query" class="form-control" value="<%= @inventory.owner_id %>">
      </div>

      <div class="form-group">
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="location_from_query" class="form-control" value="<%= @inventory.location %>">
      </div>

      <div class="form-group">
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="price_from_query" class="form-control" value="<%= @inventory.price %>">
      </div>

      <div class="form-group">
        <label for="end_date_box">
          End date
        </label>

        <input type="date" id="end_date_box" name="end_date_from_query" class="form-control" value="<%= @inventory.end_date %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update inventory
      </button>
    </form>
  </div>
</div>

<hr>
