<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all tags
    </h1>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Wine
        </th>

        <th>
          User
        </th>

        <th>
          Tag
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @tags.each do |tag| %>
      <tr>
        <td>
          <%= tag.id %>
        </td>

        <td>
          <%= tag.wine_id %>
        </td>

        <td>
          <%= tag.user_id %>
        </td>

        <td>
          <%= tag.tag %>
        </td>

        <td>
          <%= time_ago_in_words(tag.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(tag.updated_at) %> ago
        </td>

        <td>
          <a href="/tags/<%= tag.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
