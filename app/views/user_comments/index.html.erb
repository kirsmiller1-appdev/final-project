<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all comments
    </h1>
  </div>
</div>

<hr>


<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Author
        </th>

        <th>
          Wine
        </th>

        <th>
          Comment
        </th>

        <th>
        </th>
      </tr>

      <% @user_comments.each do |user_comment| %>
      <tr>


        <td>
          <%= user_comment.commenter_name %>
        </td>

        <td>
          <%= user_comment.wine_vintage %> <%= user_comment.wine_vineyard %> <%= user_comment.wine_blend %>
        </td>

        <td>
          <%= user_comment.comment %>
        </td>

        <td>
          <a href="/comments/<%= user_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
