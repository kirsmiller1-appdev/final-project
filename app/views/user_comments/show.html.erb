<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User comment #<%= @user_comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/user_comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_user_comment/<%= @user_comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete user comment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @user_comment.user_id %>
      </dd>

      <dt>
        Wine
      </dt>
      <dd>
        <%= @user_comment.wine_id %>
      </dd>

      <dt>
        Comment
      </dt>
      <dd>
        <%= @user_comment.comment %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit user comment
    </h2>

    <form action="/modify_user_comment/<%= @user_comment.id %>"  method="post" >
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control" value="<%= @user_comment.user_id %>">
      </div>

      <div class="form-group">
        <label for="wine_id_box">
          Wine
        </label>

        <input type="text" id="wine_id_box" name="wine_id_from_query" class="form-control" value="<%= @user_comment.wine_id %>">
      </div>

      <div class="form-group">
        <label for="comment_box">
          Comment
        </label>

        <textarea id="comment_box" name="comment_from_query" class="form-control" rows="3"><%= @user_comment.comment %></textarea>
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update user comment
      </button>
    </form>
  </div>
</div>

<hr>
