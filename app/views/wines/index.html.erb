<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All wines
    </h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
        </th>

        <th>
          Wine
        </th>

        <th>
          Expert rating
        </th>

        <th>
          Expert notes
        </th>

        <th>
          User rating
        </th>

        <th>
        </th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
        <td>
          <p style="text-align:center;"><img src="<%= wine.photo_url %>" height="100"></p>
        </td>

        <td>
          <a href="/wines/<%= wine.id %>">
            <%= wine.vintage %> <%= wine.vineyard %> <%= wine.blend %>
          </a>
        </td>

        <td>
          <%= wine.expert_rating %>
        </td>

        <td>
          <%= wine.expert_notes %>
        </td>

        <td>
          <% if wine.avg_rating == 0 %>
          <% else %>
            <%= wine.avg_rating %>
          <% end %>
        </td>

        <td>
          <a href="<%= wine.external_url %>">More info</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
