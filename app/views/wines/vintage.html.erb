<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of <%= @wines.at(0).vintage %> wines
    </h1>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Vintage
        </th>

        <th>
          Vineyard
        </th>

        <th>
          Blend
        </th>

        <th>
          Expert rating
        </th>

        <th>
          Expert notes
        </th>

        <th>
          Photo url
        </th>

        <th>
          External url
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @wines.each do |wine| %>
      <tr>
        <td>
          <%= wine.id %>
        </td>

        <td>
          <%= wine.vintage %>
        </td>

        <td>
          <%= wine.vineyard %>
        </td>

        <td>
          <%= wine.blend %>
        </td>

        <td>
          <%= wine.expert_rating %>
        </td>

        <td>
          <%= wine.expert_notes %>
        </td>

        <td>
          <%= wine.photo_url %>
        </td>

        <td>
          <%= wine.external_url %>
        </td>

        <td>
          <%= time_ago_in_words(wine.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(wine.updated_at) %> ago
        </td>

        <td>
          <a href="/wines/<%= wine.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
