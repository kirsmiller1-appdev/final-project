<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      User rating #<%= @user_rating.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/user_ratings" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/delete_user_rating/<%= @user_rating.id %>" class="btn btn-block btn-outline-secondary">
          Delete user rating
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @user_rating.user_id %>
      </dd>

      <dt>
        Wine
      </dt>
      <dd>
        <%= @user_rating.wine_id %>
      </dd>

      <dt>
        Rating
      </dt>
      <dd>
        <%= @user_rating.rating %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_rating.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@user_rating.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Edit user rating
    </h2>

    <form action="/modify_user_rating/<%= @user_rating.id %>"  method="post" >
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="user_id_from_query" class="form-control" value="<%= @user_rating.user_id %>">
      </div>

      <div class="form-group">
        <label for="wine_id_box">
          Wine
        </label>

        <input type="text" id="wine_id_box" name="wine_id_from_query" class="form-control" value="<%= @user_rating.wine_id %>">
      </div>

      <div class="form-group">
        <label for="rating_box">
          Rating
        </label>

        <input type="text" id="rating_box" name="rating_from_query" class="form-control" value="<%= @user_rating.rating %>">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Update user rating
      </button>
    </form>
  </div>
</div>

<hr>
